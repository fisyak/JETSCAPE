<?xml version="1.0"?>

<jetscape>

  <nEvents> 50 </nEvents>

  <outputFilename>test_brick_rMatter_lbt</outputFilename>
  <JetScapeWriterAscii> on </JetScapeWriterAscii>
  <JetScapeWriterHepMC> on </JetScapeWriterHepMC>


  <Random>
    <seed>1</seed>
  </Random>

  <!-- Hard Process -->
  <Hard>
    <PythiaGun>
      <pTHatMin>20</pTHatMin>
      <pTHatMax>30</pTHatMax>
      <eCM>200</eCM>
    </PythiaGun>
  </Hard>

  <!-- Hydro  Module  -->
  <Hydro>
    <Brick bjorken_expansion_on="false" start_time="0.6">
      <name>Brick</name>
      <T>0.25</T>
    </Brick>
  </Hydro>

  <!--Eloss Modules -->
  <Eloss>
      <maxT>20</maxT>
      <ModificationFactor> 40.0 </ModificationFactor> 
    <Matter>
      <Q0> 2.0 </Q0>
      <in_vac> 0 </in_vac>
      <vir_factor> 0.25 </vir_factor>
      <recoil_on> 1 </recoil_on>
      <broadening_on> 0 </broadening_on>
      <brick_med> 1 </brick_med>
      <!-- <QhatParametrizationType> 5 </QhatParametrizationType> -->
      <brick_length> 5 </brick_length>
      <hydro_Tc> 0.16 </hydro_Tc>
      <alphas> 0.3 </alphas>
    </Matter>

    <Lbt>
      <name> Lbt </name>
      <Q0> 2.0 </Q0>
      <in_vac> 0 </in_vac>
      <only_leading> 0 </only_leading>
      <hydro_Tc> 0.16 </hydro_Tc>
      <alphas> 0.3 </alphas>
      <run_alphas>1</run_alphas>
    </Lbt>
  </Eloss>

  <!-- Jet Hadronization Module -->
  <JetHadronization>
    <name>colorless</name>
  </JetHadronization>

</jetscape>